<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/side_nav_bar"
        android:orientation="vertical"
        android:id="@+id/navigation_header_container">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/app_icon"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Reviews activity currently under construction!"
        app:layout_constraintTop_toBottomOf="@id/navigation_header_container"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:id="@+id/txtConstructionText" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/txtConstructionText"
        android:text="@string/got_it"
        android:textColor="@color/black"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="20sp"
        android:id="@+id/btnGotIt"/>

</LinearLayout>